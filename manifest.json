{
  "name": "Oink Vision",
  "version": "1.0",
  "description": "Eye-friendly text",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "tabs"
  ],
  "browser_action": {
  	"default_icon": "images/piggy.png"
  },
  "icons": {
	  "16": "images/piggy.png",
	  "32": "images/piggy.png",
	  "48": "images/piggy.png",
	  "128": "images/piggy.png"
	},
  "manifest_version": 2
}
